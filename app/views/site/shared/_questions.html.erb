<div class="jumbotron">
  <h3>
    <%= jumbotron_message %>
  </h3>
</div>

<% @questions.each do |question| %>
  <%= form_with url: site_answer_path do |form| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <span class="label label-info">
            <%= link_to question.subject.description, site_search_subject_path(question.subject_id, question.subject.description), style: 'color: white' %>
          </span>
          <%= question.description %>
        </h3>
      </div>
      <div class="panel-body">
        <ul>
          <% question.answers.each do |answer| %>
            <div class="radio">
              <label>
                <%= radio_button_tag 'answer_id', answer.id %>
                <%= answer.description %>
              </label>
            </div>
          <% end %>
          <div class="actions">
            <%= form.submit "Responder", class: "btn btn-default", id: "submit_#{question.id}" %>
          </div>
        </ul>
      </div>
    </div>
  <% end %>
<% end %>

<div class="text-center">
  <%= paginate @questions %>
</div>