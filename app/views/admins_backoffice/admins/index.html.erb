<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">Lista de Admnistradores</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<div class="panel-body">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Email</th>
                    <th style="text-align: center" >
                      <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle" do %>
                      <i class="fa fa-plus"></i>
                    <% end %>
                    </th>
                </tr>
            </thead>
            <tbody>
              <% @admins.each do |admin| %>
                <tr>
                  <td><%= admin.id %></td>
                  <td><%= admin.email %></td>
                  <td style="text-align: center" >
                    <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do %>
                      <i class="fa fa-edit"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
    </div>
</div>



